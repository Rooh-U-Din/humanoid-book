# =============================================================================
# Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# ============ EXISTING SERVICES ============
GEMINI_API_KEY=your-gemini-api-key
TRANSLATION_API_KEY=your-translation-api-key
QDRANT_URL=https://your-qdrant-url.cloud.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key
NEON_DATABASE_URL=postgresql://user:password@host/database?sslmode=require
ENVIRONMENT=development
LOG_LEVEL=INFO

# ============ BETTERAUTH INTEGRATION (Added for FR-027) ============
# Shared secret for validating BetterAuth session cookies
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# MUST be at least 32 characters and match frontend BetterAuth config
BETTER_AUTH_SECRET=your-secret-key-here-min-32-chars

# URL where BetterAuth client is running (Docusaurus frontend)
BETTER_AUTH_URL=http://localhost:3000

# Session expiration in seconds (7 days = 604800)
SESSION_EXPIRES_IN=604800

# Session refresh interval in seconds (1 day = 86400)
SESSION_UPDATE_AGE=86400

# ============ EMAIL VERIFICATION (FR-026) ============
# Set to true to require email verification before personalization access
EMAIL_VERIFICATION_REQUIRED=true

# SMTP configuration for sending verification emails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@example.com

# Frontend URL for verification links
FRONTEND_URL=http://localhost:3000
